<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="container">

        <br>
        <br>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          
          <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
          
          <br>
          
          <div class="or"> <h6>or</h6> </div>
  
          <br>

          <div class="form-group">
            <%= f.text_field :fullname, :class => "validate", :placeholder => "Name", class: "form-control" %>
          </div>

          <br> 
           
          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email address", class: "form-control" %>
          </div>

          <br>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Create a password", class: "form-control" %>
          </div>

          <br>

          <div class="actions">
            <%= f.submit "Sign up", :class => "btn btn-submit btn-block" %>
          </div>
          <% end %>

          <hr>

          <center><span>Already have an Evergym account? <%= link_to "Log in", new_session_path(resource_name) %></span></center>

          <br>

      </div>
    </div>
  </div>
</div>
