<div class="container content">
  <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><%= link_to "Your Listings", rooms_path, class: "sidebar-link active" %></li>
        <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
        <li class="sidebar-item"><%= link_to "Your Bookings", your_bookings_path, class: "sidebar-link" %></li>
      </ul>
    </div>
    <% if @rooms.count > 0 %>
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          Listings
        </div>
        <div class="panel-body">
          <% @rooms.each do |room| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag room.cover_photo(:thumb) %>
              </div>
              <div class="col-md-7">
                <h4><%= room.listing_name %></h4>
              </div>
              <div class="col-md-3 right">
                <%= link_to "Update", listing_room_path(room), class: "btn btn-update" %>
              </div>
            </div>
            <hr/>
          <% end %>
        </div>
      </div>
    </div>
    <% else %>
      <div class="col-md-6 text-center">
        <h3>You don't have any listings.</h3>
        <a href="/rooms/new" role="button" class="text-babu">
          <i class="fa fa-plus-circle fa-3x"></i>
        </a>
      </div>
    <% end %>
  </div>  
</div>

